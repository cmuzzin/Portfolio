{
  "hosting": {
    "public": "dist"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ],
  "rewrites": [{
    "source": "/public/**",
    "destination": "/public.html"
  },
    {
      "source": "**",
      "destination": "/index.html"
    }]
}
